number_max_stars = int(input())

#Print * stright per row
for i in range(1, number_max_stars +1):
    for y in range(0, i):
        print('*',end = '')
    print()

#Print * revers per row
for z in range(number_max_stars -1, -1, -1):
    for c in range(0, z):
        print('*', end = '')
    print()
